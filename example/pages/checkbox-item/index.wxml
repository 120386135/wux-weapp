<view class="page">
    <view class="page__hd">
        <view class="page__title">CheckboxItem</view>
        <view class="page__desc">选择框</view>
    </view>
    <view class="page__bd">
        <view class="sub-title">CheckboxItem</view>
        <wux-checkbox-item color="light" value="1" defaultChecked />
        <wux-checkbox-item color="stable" value="2" defaultChecked />
        <wux-checkbox-item color="positive" value="3" defaultChecked />
        <wux-checkbox-item color="calm" value="4" />
        <wux-checkbox-item color="balanced" value="5" />
        <wux-checkbox-item color="energized" value="6" />
        <wux-checkbox-item color="assertive" value="7" disabled />
        <wux-checkbox-item color="royal" value="8" disabled />
        <wux-checkbox-item color="dark" value="9" disabled />
        <wux-checkbox-item type="radio" color="light" value="1" defaultChecked />
        <wux-checkbox-item type="radio" color="stable" value="2" defaultChecked />
        <wux-checkbox-item type="radio" color="positive" value="3" defaultChecked />
        <wux-checkbox-item type="radio" color="calm" value="4" defaultChecked />
        <wux-checkbox-item type="radio" color="balanced" value="5" defaultChecked />
        <wux-checkbox-item type="radio" color="energized" value="6" defaultChecked />
        <wux-checkbox-item type="radio" color="assertive" value="7" disabled defaultChecked />
        <wux-checkbox-item type="radio" color="royal" value="8" disabled defaultChecked />
        <wux-checkbox-item type="radio" color="dark" value="9" disabled defaultChecked />
        <view class="sub-title">Controlled</view>
        <wux-checkbox-item color="light" value="1" checked="{{ checked }}" bind:change="onCheckboxChange" />
        <view class="sub-title">Slot</view>
        <wux-checkbox-item color="light" value="1" type="default">
            <view class="icon-on" slot="icon-on"></view>
            <view class="icon-off" slot="icon-off"></view>
        </wux-checkbox-item>
        <view class="sub-title">With cellGroup</view>
        <wux-cell-group>
            <block wx:for="{{ items }}" wx:key="">
                <wux-cell title="{{ item.label }}">
                    <wux-checkbox-item slot="header" wux-class="checkbox" value="{{ item.value }}" />
                </wux-cell>
            </block>
        </wux-cell-group>
        <view class="sub-title">With cellGroup</view>
        <wux-cell-group>
            <block wx:for="{{ items }}" wx:key="">
                <wux-cell title="{{ item.label }}">
                    <wux-checkbox-item slot="footer" wux-class="checkbox" type="radio" value="{{ item.value }}" checked="{{ value === item.value }}" controlled bind:change="onChange" />
                </wux-cell>
            </block>
        </wux-cell-group>
        <view class="sub-title">Other</view>
        <wux-checkbox-item color="light" value="1">Agree agreement</wux-checkbox-item>
    </view>
</view>