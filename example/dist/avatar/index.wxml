<view class="wux-class wux-avatar {{ shape ? 'wux-avatar--' + shape : '' }} {{ size ? 'wux-avatar--' + size : '' }} {{ src ? 'wux-avatar--thumb' : '' }}" style="{{ bodyStyle }}">
    <image src="{{ src }}" wx:if="{{ src }}" />
    <view class="wux-avatar__string" wx:else>
        <slot></slot>
    </view>
</view>